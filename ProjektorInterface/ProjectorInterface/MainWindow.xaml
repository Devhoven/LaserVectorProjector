<Window x:Class="ProjectorInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectorInterface"
        mc:Ignorable="d"
        x:Name="Window" Title="MainWindow" WindowState="Maximized" Background="Black"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Viewbox Stretch="Uniform">
            <local:DrawingCanvas x:Name="DrawCon" Width="{Binding CanvasResolution}" Height="{Binding CanvasResolution}"
                                 Margin="20" Background="White" ClipToBounds="True" Focusable="True"/>
        </Viewbox>
    </Grid>
</Window>
