<Window x:Class="ProjectorInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectorInterface"
        mc:Ignorable="d"
        x:Name="Window" Title="MainWindow" WindowState="Maximized" Background="Black"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Menu x:Name="NavigationBar" Grid.Row="0" KeyboardNavigation.DirectionalNavigation="None">
            <MenuItem Header="File">
                <MenuItem Header="Select Lasershow folder" Click="SelectShowClick"/>
                <MenuItem Header="Start Lasershow" Click="StartShowClick"/>
                <MenuItem Header="Stop Lasershow" Click="StopShowClick"/>
            </MenuItem>

            <ComboBox x:Name="Combo" Grid.Row="0" Padding="1"/>

        </Menu>
        <Viewbox Stretch="Uniform" Grid.Row="1">
            <local:DrawingCanvas x:Name="DrawCon" Width="{Binding CanvasResolution}" Height="{Binding CanvasResolution}"
                                 Margin="20" Background="White" ClipToBounds="True" Focusable="True"/>
        </Viewbox>
    </Grid>
</Window>
